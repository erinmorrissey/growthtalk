<h6><a href="/categories" class="breadcrumb">Categories</a> > <%= @category.name %></h6>

<h1 class="pull-left"><%= @category.name %></h1>

<%= link_to 'Add a New Resource', new_category_resource_path(@category), class: 'btn btn-md btn-warning newresbtn' %>

<div class="clearfix"></div>

<% if current_user && current_user.admin? %>
  <%= link_to 'Edit', edit_category_path(@category) %>
  <%= link_to 'Destroy', category_path(@category), method: :delete, data: {confirm: 'Are you sure you want to delete this?'} %>
  <%= link_to 'Add a New Resource', new_category_resource_path(@category) %>
<% end %>

<ul class="list-group">
  <% @category.resources.each do |resource| %>
    <li class="list-group-item"><%= link_to resource.name, resource_path(resource) %></li>
  <% end %>
</ul>
