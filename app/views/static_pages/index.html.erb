<section id="homecategories">
    <div class="container">
        <div class="row">
            <h4>What does your business need?</h4>
            <h2>Browse Our Categories</h2>
            <% @categories.each do |cat| %>
                <%= link_to category_path(cat), class: 'category' do %>
                    <div class="col-md-3 homecatbox">
                        <%= cat.name %>
                    </div>
                <% end %>
            <% end %>

            <% 11.times do %>
                <div class="col-md-3 homecatbox">.col-md-4</div>
            <% end %>

        </div>
    </div>
</section>
