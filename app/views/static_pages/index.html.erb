<header>
    <div class="container">
        <div class="row">
        <% if notice.present? %>
            <p class="alert alert-info"><%= notice %></p>
        <% end %>
        <% if alert.present? %>
            <p class="alert alert-danger"><%= alert %></p>
        <% end %>
            <div class="col-sm-7">
                <div class="header-content">
                    <div class="header-content-inner">
                        <h1>Find and share the financial resources you need to grow your business.</h1>
                        <a href="/categories" class="btn btn-outline btn-xl page-scroll">FIND A RESOURCE</a>
                    </div>
                </div>
            </div>
            <div class="col-sm-5"></div>
        </div>
    </div>
</header>

